ENV=production
FLASK_ENV=production
DEBUG=0
LOG_LEVEL=INFO

HOST=0.0.0.0
PORT=10000

APP_NAME=Skyline Store
SITE_URL=https://your-domain.example
APP_URL=https://your-domain.example
PREFERRED_URL_SCHEME=https
FORCE_HTTPS=1
TRUST_PROXY_HEADERS=1
HSTS=1

TZ=America/Montevideo
PYTHONIOENCODING=utf-8
PYTHONUTF8=1
JSON_SORT_KEYS=0
TEMPLATES_AUTO_RELOAD=0

SECRET_KEY=CHANGE_ME_SET_REAL_SECRET_32+CHARS
WTF_CSRF_SECRET_KEY=CHANGE_ME_CSRF_SECRET_32+CHARS

SESSION_COOKIE_NAME=skyline_session
SESSION_COOKIE_HTTPONLY=1
SESSION_COOKIE_SECURE=1
SESSION_COOKIE_SAMESITE=Lax
SESSION_DAYS=30
SESSION_REFRESH_EACH_REQUEST=0

WTF_CSRF_ENABLED=1
WTF_CSRF_TIME_LIMIT=3600
WTF_CSRF_SSL_STRICT=1

DATABASE_URL=
SQLALCHEMY_DATABASE_URI=
SQLALCHEMY_ECHO=0
DB_POOL_RECYCLE=280
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

MAX_UPLOAD_MB=20
UPLOADS_DIR=static/uploads

ENABLE_MINIFY=1
ENABLE_COMPRESS=1

CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=skyline

SEED=0
SKIP_ADMIN_BOOTSTRAP=1
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=
ADMIN_ROLE=admin
OWNER_EMAIL=

VERIFY_EMAIL_ENABLED=0
VERIFY_EMAIL_REQUIRED=0
VERIFY_TOKEN_MAX_AGE_SEC=86400
RESEND_VERIFY_COOLDOWN_SEC=60
VERIFY_EMAIL_PATH=/auth/verify-email
AUTH_MIN_PASSWORD_LEN=8
AUTH_FORM_NONCE_TTL=1200

ENABLE_PRINTFUL=0
PRINTFUL_API_KEY=
PRINTFUL_STORE_ID=
PRINTFUL_CACHE_TTL=300

ENABLE_PAYMENTS=0
PAYMENTS_MODE=sandbox
MP_PUBLIC_KEY=
MP_ACCESS_TOKEN=

STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USE_SSL=0
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=Skyline Store <no-reply@your-domain.example>
