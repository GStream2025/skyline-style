# -------------------------------------------------
# APP / FLASK
# -------------------------------------------------
ENV=development
FLASK_ENV=development
DEBUG=1
HOST=127.0.0.1
PORT=5000
LOG_LEVEL=DEBUG

# -------------------------------------------------
# SEGURIDAD (LOCAL)
# En producción: SECRET_KEY solo en Render
# -------------------------------------------------
SECRET_KEY=dev_secret_key_change_me

# -------------------------------------------------
# DATABASE (LOCAL)
# -------------------------------------------------
DATABASE_URL=sqlite:///skyline.db

# -------------------------------------------------
# ADMIN — SEED (EJEMPLO)
# Se crea SOLO si no existe y SEED=1
# -------------------------------------------------
SEED=1
ADMIN_EMAIL=GabrielAdmin@SkylineStore.com
ADMIN_PASSWORD=Sofia1923
ADMIN_NAME=Gabriel Admin
ADMIN_ROLE=admin

# -------------------------------------------------
# COOKIES / HTTPS (local friendly)
# -------------------------------------------------
COOKIE_SECURE=0
SESSION_SAMESITE=Lax
FORCE_HTTPS=0

# -------------------------------------------------
# UPLOADS (LOCAL)
# ⚠️ En Render FREE no es persistente
# -------------------------------------------------
UPLOADS_DIR=static/uploads

# -------------------------------------------------
# PAYMENTS
# -------------------------------------------------

# PayPal (Global)
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# MercadoPago (Uruguay)
MP_ACCESS_TOKEN=
MP_PUBLIC_KEY=

# Transferencia bancaria (texto mostrado en checkout)
BANK_TRANSFER_INSTRUCTIONS=Cuenta: 123-456 | Banco: MiDinero | Titular: Skyline Store

# -------------------------------------------------
# PRINTFUL
# -------------------------------------------------
PRINTFUL_API_KEY=
PRINTFUL_STORE_ID=
PRINTFUL_BASE_URL=https://api.printful.com
PRINTFUL_CACHE_TTL=300

# -------------------------------------------------
# EMAIL / MARKETING
# -------------------------------------------------
MAIL_PROVIDER=brevo
MAIL_API_KEY=
MAIL_FROM=Skyline Store <noreply@skyline.com>

# -------------------------------------------------
# FEATURE FLAGS (opcional, PRO)
# -------------------------------------------------
ENABLE_EMAILS=0
ENABLE_PAYMENTS=0
ENABLE_PRINTFUL=0
